<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Penjual - AZZAHRASHOP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-4">
        <h1 class="mb-4">Dashboard Penjual</h1>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5><%= products.length %></h5>
                        <p>Produk Saya</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5><%= notifications.length %></h5>
                        <p>Notifikasi Baru</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5>Rp 0</h5>
                        <p>Pendapatan Bulan Ini</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5>Produk Saya</h5>
                        <a href="/seller/upload" class="btn btn-primary btn-sm">Upload Produk Baru</a>
                    </div>
                    <div class="card-body">
                        <% if (products.length === 0) { %>
                            <p class="text-muted">Belum ada produk. <a href="/seller/upload">Upload produk pertama Anda</a></p>
                        <% } else { %>
                            <div class="row">
                                <% products.forEach(product => { %>
                                    <div class="col-md-6 mb-3">
                                        <div class="card">
                                            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                                            <div class="card-body">
                                                <h6 class="card-title"><%= product.name %></h6>
                                                <p class="card-text">Rp <%= product.price.toLocaleString('id-ID') %> | Stok: <%= product.stock %></p>
                                                <a href="/seller/products/<%= product.id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                                <button class="btn btn-sm btn-danger" onclick="deleteProduct('<%= product.id %>')">Hapus</button>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Notifikasi Penjualan</h5>
                    </div>
                    <div class="card-body">
                        <% if (notifications.length === 0) { %>
                            <p class="text-muted">Tidak ada notifikasi baru</p>
                        <% } else { %>
                            <% notifications.forEach(notification => { %>
                                <div class="alert alert-info">
                                    <p><%= notification.message %></p>
                                    <small class="text-muted"><%= new Date(notification.createdAt).toLocaleString('id-ID') %></small>
                                    <button class="btn btn-sm btn-outline-primary ms-2" onclick="markAsRead('<%= notification.id %>')">Tandai Dibaca</button>
                                </div>
                            <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function deleteProduct(id) {
            if (confirm('Apakah Anda yakin ingin menghapus produk ini?')) {
                fetch(`/seller/products/${id}/delete`, { method: 'POST' }).then(() => location.reload());
            }
        }

        function markAsRead(id) {
            fetch(`/seller/notifications/${id}/read`, { method: 'POST' }).then(() => location.reload());
        }
    </script>
</body>
</html>
