<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Pembeli - AZZAHRASHOP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-4">
        <h1 class="mb-4">Dashboard Pembeli</h1>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5><%= orders.length %></h5>
                        <p>Total Pesanan</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5><%= orders.filter(o => o.status === 'delivered').length %></h5>
                        <p>Pesanan Selesai</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5>Rp <%= orders.reduce((sum, o) => sum + o.total, 0).toLocaleString('id-ID') %></h5>
                        <p>Total Belanja</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>Riwayat Pesanan</h5>
            </div>
            <div class="card-body">
                <% if (orders.length === 0) { %>
                    <p class="text-muted">Belum ada pesanan. <a href="/products">Mulai belanja</a></p>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID Pesanan</th>
                                    <th>Tanggal</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach(order => { %>
                                    <tr>
                                        <td><%= order.id %></td>
                                        <td><%= new Date(order.createdAt).toLocaleDateString('id-ID') %></td>
                                        <td>Rp <%= order.total.toLocaleString('id-ID') %></td>
                                        <td>
                                            <span class="badge bg-<%= order.status === 'delivered' ? 'success' : order.status === 'shipped' ? 'info' : order.status === 'paid' ? 'warning' : 'secondary' %>">
                                                <%= order.status === 'delivered' ? 'Diterima' : order.status === 'shipped' ? 'Dikirim' : order.status === 'paid' ? 'Dibayar' : 'Pending' %>
                                            </span>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-info" onclick="viewOrder('<%= order.id %>')">Lihat Detail</button>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function viewOrder(id) {
            window.location.href = `/buyer/orders/${id}`;
        }
    </script>
</body>
</html>
