<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Keranjang Belanja - AZZAHRASHOP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-4">
        <h1 class="mb-4">Keranjang Belanja</h1>

        <% if (cartItems.length === 0) { %>
            <div class="text-center">
                <h3>Keranjang Anda kosong</h3>
                <a href="/products" class="btn btn-primary">Belanja Sekarang</a>
            </div>
        <% } else { %>
            <div class="row">
                <div class="col-md-8">
                    <% cartItems.forEach(item => { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        <img src="<%= item.image %>" class="img-fluid" alt="<%= item.name %>">
                                    </div>
                                    <div class="col-md-6">
                                        <h5><%= item.name %></h5>
                                        <p><%= item.description.substring(0, 100) %>...</p>
                                        <p class="price">Rp <%= item.price.toLocaleString('id-ID') %></p>
                                    </div>
                                    <div class="col-md-2">
                                        <form method="POST" action="/cart/update/<%= item.id %>">
                                            <input type="number" name="quantity" value="<%= item.quantity %>" min="1" max="<%= item.stock %>" class="form-control mb-2">
                                            <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                                        </form>
                                    </div>
                                    <div class="col-md-2">
                                        <p class="mb-2">Subtotal: Rp <%= (item.price * item.quantity).toLocaleString('id-ID') %></p>
                                        <form method="POST" action="/cart/remove/<%= item.id %>">
                                            <button type="submit" class="btn btn-sm btn-danger">Hapus</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5>Ringkasan Belanja</h5>
                        </div>
                        <div class="card-body">
                            <p>Total: <strong>Rp <%= total.toLocaleString('id-ID') %></strong></p>
                            <a href="/checkout" class="btn btn-success w-100">Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
