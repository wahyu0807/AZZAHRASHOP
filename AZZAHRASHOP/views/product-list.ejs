<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Produk - AZZAHRASHOP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-4">
        <h1 class="mb-4">Daftar Produk</h1>

        <!-- Search and Filter -->
        <div class="row mb-4">
            <div class="col-md-6">
                <form method="GET" action="/products" class="d-flex">
                    <input type="text" name="search" class="form-control me-2" placeholder="Cari produk..." value="<%= typeof search !== 'undefined' ? search : '' %>">
                    <button type="submit" class="btn btn-outline-primary">Cari</button>
                </form>
            </div>
            <div class="col-md-6">
                <form method="GET" action="/products" class="d-flex">
                    <select name="category" class="form-select me-2">
                        <option value="">Semua Kategori</option>
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat.name %>" <%= typeof category !== 'undefined' && category === cat.name ? 'selected' : '' %>><%= cat.name %></option>
                        <% }) %>
                    </select>
                    <button type="submit" class="btn btn-outline-secondary">Filter</button>
                </form>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-md-3 mb-4">
                    <div class="card product-card">
                        <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text"><%= product.description.substring(0, 100) %>...</p>
                            <p class="price">Rp <%= product.price.toLocaleString('id-ID') %></p>
                            <p class="text-muted">Stok: <%= product.stock %></p>
                            <div class="d-flex justify-content-between">
                                <a href="/products/<%= product.id %>" class="btn btn-primary">Lihat Detail</a>
                                <form method="POST" action="/cart/add/<%= product.id %>" class="d-inline">
                                    <input type="number" name="quantity" value="1" min="1" max="<%= product.stock %>" class="form-control d-inline w-50 me-1" style="width: 60px !important;">
                                    <button type="submit" class="btn btn-success">Tambah ke Keranjang</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <% if (products.length === 0) { %>
            <div class="text-center mt-5">
                <h3>Tidak ada produk ditemukan</h3>
                <a href="/products" class="btn btn-primary">Lihat Semua Produk</a>
            </div>
        <% } %>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
