<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AZZAHRASHOP - Belanja Online Terpercaya</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <!-- Hero Banner -->
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <% banners.forEach((banner, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                    <img src="<%= banner.image %>" class="d-block w-100" alt="<%= banner.title %>">
                    <div class="carousel-caption d-none d-md-block">
                        <h5><%= banner.title %></h5>
                        <p><%= banner.description %></p>
                        <a href="<%= banner.link %>" class="btn btn-primary">Belanja Sekarang</a>
                    </div>
                </div>
            <% }) %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Categories -->
    <div class="container mt-5">
        <h2 class="text-center mb-4">Kategori Produk</h2>
        <div class="row">
            <% categories.forEach(category => { %>
                <div class="col-md-3 mb-4">
                    <div class="card category-card">
                        <img src="<%= category.image %>" class="card-img-top" alt="<%= category.name %>">
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= category.name %></h5>
                            <a href="/products?category=<%= category.name %>" class="btn btn-outline-primary">Lihat Produk</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Featured Products -->
    <div class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-4">Produk Populer</h2>
            <div class="row">
                <% products.slice(0, 8).forEach(product => { %>
                    <div class="col-md-3 mb-4">
                        <div class="card product-card">
                            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text"><%= product.description.substring(0, 50) %>...</p>
                                <p class="price">Rp <%= product.price.toLocaleString('id-ID') %></p>
                                <div class="d-flex justify-content-between">
                                    <a href="/products/<%= product.id %>" class="btn btn-primary">Lihat Detail</a>
                                    <form method="POST" action="/cart/add/<%= product.id %>" class="d-inline">
                                        <input type="hidden" name="quantity" value="1">
                                        <button type="submit" class="btn btn-success">Beli</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="text-center">
                <a href="/products" class="btn btn-primary">Lihat Semua Produk</a>
            </div>
        </div>
    </div>

    <!-- Features -->
    <div class="container py-5">
        <div class="row text-center">
            <div class="col-md-4">
                <div class="feature-icon mb-3">
                    <i class="fas fa-shipping-fast fa-3x text-primary"></i>
                </div>
                <h4>Gratis Ongkir</h4>
                <p>Gratis ongkir untuk pembelian di atas Rp 100.000</p>
            </div>
            <div class="col-md-4">
                <div class="feature-icon mb-3">
                    <i class="fas fa-shield-alt fa-3x text-primary"></i>
                </div>
                <h4>Pembayaran Aman</h4>
                <p>Berbagai metode pembayaran yang aman dan terpercaya</p>
            </div>
            <div class="col-md-4">
                <div class="feature-icon mb-3">
                    <i class="fas fa-headset fa-3x text-primary"></i>
                </div>
                <h4>Customer Service 24/7</h4>
                <p>Tim customer service siap membantu Anda kapan saja</p>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
