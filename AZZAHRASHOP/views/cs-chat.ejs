<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Service - AZZAHRASHOP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-4">
        <h1 class="mb-4">Customer Service AI</h1>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5>Chat dengan Customer Service</h5>
                    </div>
                    <div class="card-body chat-container" style="height: 400px; overflow-y: auto;">
                        <% chats.forEach(chat => { %>
                            <div class="message <%= chat.sender === 'user' ? 'user-message' : 'ai-message' %>">
                                <strong><%= chat.sender === 'user' ? 'Anda' : 'CS AI' %>:</strong> <%= chat.message %>
                                <small class="text-muted"><%= new Date(chat.timestamp).toLocaleTimeString('id-ID') %></small>
                            </div>
                        <% }) %>
                    </div>
                    <div class="card-footer">
                        <form method="POST" action="/cs/send" class="d-flex">
                            <input type="text" name="message" class="form-control me-2" placeholder="Ketik pesan Anda..." required>
                            <button type="submit" class="btn btn-primary">Kirim</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Informasi Bantuan</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            <li><strong>Pengiriman:</strong> 2-5 hari kerja</li>
                            <li><strong>Pengembalian:</strong> 7 hari setelah menerima</li>
                            <li><strong>Kontak:</strong> support@azzahrashop.com</li>
                            <li><strong>Phone:</strong> 0812-3456-7890</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto scroll to bottom of chat
        const chatContainer = document.querySelector('.chat-container');
        chatContainer.scrollTop = chatContainer.scrollHeight;
    </script>
</body>
</html>
